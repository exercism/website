- content_for :meta_title, t('.meta_title')
- content_for :meta_description, t('.meta_description')
- content_for :canonical_url, individual_supporters_about_url
- require_stylesheet "about"

= render ViewComponents::AboutNav.new(:individual_supporters)

#page-individual-supporters
  %header.pb-56.c-header-with-bg
    .md-container.flex.flex-col.items-center.c-shapes.c-shapes-1.text-center
      .emoji ü§ó üéÅ üíô
      %h1.text-h0.mb-16= t('.header_title_html')
      %p.text-p-2xlarge.text-textColor6.font-medium.mb-32= t('.donors_count', num_individual_supporters: @num_individual_supporters)

  .md-container
    .cta.top-cta.flex.flex-col.lg:flex-row.lg:items-center.border-gradient.py-24.px-24.lg:px-40.mb-48
      = icon "exercism-face-gradient", "Exercism logo"
      .text
        %h2.text-h4.mb-4= t('.cta_heading')
        %p.text-p-large= t('.cta_text')

      = link_to donate_path, class: 'btn-primary btn-m mt-16 lg:mt-0 lg:ml-auto md:px-80' do
        %span= t('.donate_button')


    .donors.grid.grid-cols-1.md:grid-cols-2.lg:grid-cols-3.gap-20.mb-20
      - @supporting_users.each do |user|
        .donor.flex
          = image_tag user.avatar_url, alt: t('.user_avatar_alt', user_name: user.name)
          .text
            .name.text-h5.mb-2= render ViewComponents::HandleWithFlair.new(user.name, user.flair, size: :medium)
            .when.text-textColor6= t('.first_supported_at', time_ago: time_ago_in_words(user.first_donated_at))

    = paginate @supporting_users

    .missing.border-1.border-borderLight.rounded-8.py-12.px-16.bg-backgroundColorA.mt-40
      .flex
        = graphical_icon "info-circle"
        .text
          %h2.text-15.leading-140.text-textColor5.font-semibold.mb-4= t('.missing_supporters_heading')
          %p.text-14.leading-140.text-textColor5= t('.missing_supporters_text', donations_settings_link: link_to(t('.donations_settings_link_text'), donations_settings_path, class: 'text-lightBlue font-medium'), donations_email_link: link_to(t('.donations_email_link_text'), 'mailto:donations@exercism.org', class: 'text-lightBlue font-medium'))
