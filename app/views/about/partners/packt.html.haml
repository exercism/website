- require_stylesheet "about"

= render ViewComponents::AboutNav.new(:organisation_supporters)

#page-organisation-supporter
  %header.pb-60
    .md-container.flex.flex-col.items-center.c-shapes.c-shapes-1.text-center
      = link_to about_partners_path, class: "c-prominent-link mt-48 mb-24" do
        = graphical_icon "arrow-left"
        = t('.see_all_supporters')

      %h1.text-h0.flex.flex-col.items-center.text-center
        = t('.supported_by_prefix')
        %br
        = icon "packt", "Packt Publishing", category: :partners, css_class: "logo packt"

  .md-container
    %article
      .lhs
        %h2.text-h2= t('.org_supports_exercism', org_name: @org.name)
        %hr.c-divider.mt-20.mb-28
        %p.text-p-xlarge.mb-40= t('.packt_partnership_description')

        %h2.text-h2= t('.about_packt_publishing')
        %hr.c-divider.mt-20.mb-28
        %p.text-p-xlarge.mb-16= t('.packt_about_p1')
        %p.text-p-xlarge.mb-16= t('.packt_about_p2')
