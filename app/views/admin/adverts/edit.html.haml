.c-admin-page
  .lg-container
    %h1.text-h1.mb-16= t('.title', partner_name: @partner.name, advert_id: @advert.id)

    = form_with(model: @advert, url: admin_partner_advert_path(@partner, @advert)) do |f|
      = render "form", f:, partner: @partner, advert: @advert

    %br/
    %div
      = link_to t('.back_to_partner_link'), [:admin, @partner]
