- require_stylesheet "about"
- require_stylesheet "admin"
.c-admin-page
  .lg-container
    %h1.text-h1.mb-16= t('.perk_heading', partner_name: @partner.name, perk_id: @perk.id)
    %div{ class: 'max-w-[443px]' }= render ViewComponents::Partner::Perk.new(@perk)
    %hr.my-32.border-borderColor5

    .text-h6.mb-8
      = t('.status_label')
      %span{ class: "c-perk-status-tag #{@perk.status}" }= @perk.status.titleize
    .text-h6.mb-8= t('.num_clicks', count: @perk.num_clicks)
    .text-h6= t('.preview_text_label')
    %p{ class: 'max-w-[400px] mb-16' }= @perk.preview_text

    %h2.text-h2.mb-12= t('.general_offer_heading')
    .text-h6.mb-8= t('.url', url: @perk.general_url)
    .text-h6.mb-8= t('.offer_summary', summary: @perk.general_offer_summary_markdown)
    .text-h6.mb-8= t('.button_text', text: @perk.general_button_text)
    .text-h6.mb-16= t('.offer_details', details: @perk.general_offer_details)

    %h2.text-h2.mb-12= t('.insiders_offer_heading')
    .text-h6.mb-8= t('.url', url: @perk.insiders_url)
    .text-h6.mb-8= t('.offer_summary', summary: @perk.insiders_offer_summary_markdown)
    .text-h6.mb-8= t('.button_text', text: @perk.insiders_button_text)
    .text-h6.mb-8= t('.offer_details', details: @perk.insiders_offer_details)

    %hr.my-32.border-borderColor5

    .flex
      = link_to t('.back_to_partner'), [:admin, @partner], class: 'btn btn-m'
