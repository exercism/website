- solution ||= nil
- project = exercise.project
- status = solution ? solution.status : "available"
= link_to [project, exercise], class: "exercise #{status}" do
  .flex.items-center
    .text
      %h3
        = project.title
      %h4
        Part #{exercise.idx + 1}.
        = exercise.title
    .tag= status.to_s.titleize
  %p= exercise.description
