- week = ((Time.zone.today - Date.new(2024, 1, 15)) / 7).ceil
- featured_exercise = @exercises.find { |e| e.week == week }
- if featured_exercise
  - featured_exercise_ps_data = Git::ProblemSpecifications::Exercise.new(featured_exercise.slug)
  - featured_tracks = Track.where(slug: featured_exercise.featured_tracks).order(:title).pluck(:slug, :title).to_h
- live_exercises = @exercises.select { |e| e.week <= week }
- num_placeholders = 48 - live_exercises.size

