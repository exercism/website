%section.tracks-section
  .c-heading-with-count
    %h3.--text.text-h3= t('.title')
    .--count{ 'aria-label': t('.track_count_aria_label', count: num_user_tracks) }= num_user_tracks

  .tracks
    - user_tracks.each do |user_track|
      = link_to user_track.track, class: 'track' do
        = track_icon(user_track.track)
        .info
          .title= user_track.track.title
          .progress
            %progress.progress-bar{ value: user_track.num_completed_exercises, max: user_track.num_exercises }
          .counts= t('.exercises_completed', completed: user_track.num_completed_exercises, total: user_track.num_exercises)
        = graphical_icon :"chevron-right", css_class: "action-icon"

  - if num_user_tracks > user_tracks.size
    = render ViewComponents::ProminentLink.new(t('.view_all_tracks_link'), tracks_path)
  - else
    = render ViewComponents::ProminentLink.new(t('.discover_more_tracks_link'), tracks_path)
