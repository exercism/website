- content_for :canonical_url, new_user_registration_url

#page-auth
  %section.form-section
    .inner
      = link_to root_path, class: 'logo' do
        = icon "exercism-with-logo-black", t('.exercism_logo_alt')
      %p.tagline= t('.tagline')

      = button_to omniauth_authorize_path(:user, :github), form_class: "github-btn", class: "btn-enhanced btn-l github-btn", method: :post, data: { turbo: false } do
        = graphical_icon 'external-site-github'
        = t('.sign_up_with_github')

      .divider
        %span= t('.or_divider')

      = flash_messages

      = form_for(resource, as: resource_name, url: registration_path(resource_name), 'data-turbo': false, html: { 'data-turbo': false }) do |f|
        .field
          = f.label :handle, t('.username_label')
          = f.text_field :handle, placeholder: t('.username_placeholder')
        .field
          = f.label :email
          = f.email_field :email, autocomplete: "email", placeholder: t('.email_placeholder')
        .field
          = f.label :password
          = f.password_field :password, autocomplete: "new-password", placeholder: t('.password_placeholder', minimum_password_length: @minimum_password_length)
        .field
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: t('.password_confirmation_placeholder')

        .field
          = f.label :bot_check, t('.confirm_not_bot_label')
          = render ViewComponents::Captcha.new

        = f.button t('.sign_up_button'), class: "btn-primary btn-l"

      = render "devise/shared/links"

  = render "devise/shared/information"
