- content_for :canonical_url, new_user_session_url

#page-auth
  %section.form-section
    .inner
      = link_to root_path, class: 'logo' do
        = icon "exercism-with-logo-black", t('.exercism_logo_alt')

      %p.tagline= t('.tagline')

      = button_to omniauth_authorize_path(:user, :github), form_class: "github-btn", class: "btn-enhanced btn-l", method: :post, data: { turbo: false } do
        = graphical_icon 'external-site-github'
        = t('.log_in_with_github')

      .divider
        %span= t('.or_divider')

      = flash_messages

      = form_for(resource, as: resource_name, url: session_path(resource_name), html: { 'data-turbo': false }) do |f|
        .field
          = f.label :email
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('.email_placeholder')
        .field
          = f.label :password
          = f.password_field :password, autocomplete: "current-password", placeholder: t('.password_placeholder')
          = link_to t('.forgot_your_password_link'), new_password_path(resource_name), class: 'forgotten-password'

        = f.button t('.log_in_button'), class: 'btn-primary btn-l'

      = render "devise/shared/links"

  = render "devise/shared/information"
