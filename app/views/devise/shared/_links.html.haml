.devise-links
  - if controller_name != 'sessions'
    .link
      = t('.already_have_account_prompt')
      = link_to t('.log_in_link'), new_session_path(resource_name)
  - if devise_mapping.registerable? && controller_name != 'registrations'
    .link
      = t('.no_account_yet_prompt')
      = link_to t('.sign_up_link'), new_registration_path(resource_name)
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    .link
      = t('.didnt_receive_confirmation_email_prompt')
      = link_to t('.resend_it_link'), new_confirmation_path(resource_name)
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    .link
      = link_to t('.didnt_receive_unlock_instructions_link'), new_unlock_path(resource_name)
