#page-impact.bg-white
  .lg-container
    %header.py-32
      %h1.text-h2
        = t('.page_title')
      - if @track
        %h2.text-h4= t('.track_heading', track_title: @track.title)

    %article
      %section
        %table
          %tr
            %th= t('.table_headers.metric')
            %th= t('.table_headers.last_24_hours')
            %th= t('.table_headers.last_month')
          %tr
            %td= t('.table_data_labels.solutions_submitted')
            %td= @last_24_hours[:num_solutions_submitted]
            %td= @last_month[:num_solutions_submitted]
          %tr
            %td= t('.table_data_labels.solutions_completed')
            %td= @last_24_hours[:num_solutions_completed]
            %td= @last_month[:num_solutions_completed]
          %tr
            %td= t('.table_data_labels.prs_opened')
            %td= @last_24_hours[:num_opened_pull_requests]
            %td= @last_month[:num_opened_pull_requests]
