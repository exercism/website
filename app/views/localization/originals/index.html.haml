%table
  %tbody
    - @originals.each do |original|
      %tr
        %td= original[:uuid]
        %td= original[:key]
        %td= original[:value]
        %td
          .flex.items-center
            - original[:translations].each do |translation|
              .mr-10
                = flag_for_locale(translation[:locale])
                - if translation[:status] == "checked"
                  ‚úÖ
                - elsif translation[:status] == "unchecked"
                  ‚ùå
                - else
                  üü†

        %td= link_to "View", localization_original_path(original[:uuid]), class: "btn-m btn-secondary"
