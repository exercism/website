#page-mentoring-external-request
  .lg-container.flex.flex-col.items-center.c-shapes.c-shapes-1
    = avatar(@solution.user)
    %h1.text-h1.mb-16= t('.heading', user_handle: @solution.user.handle)
    %p.text-p-2xlarge.mb-32= t('.description', user_handle: @solution.user.handle)
    = render 'exercise_tag', solution: @solution
    .buttons.grid.grid-cols-2-auto.gap-20.mb-48
      = button_to t('.accept_button'), accept_mentoring_external_request_url, method: :patch, class: 'btn-primary btn-l'
      = link_to t('.decline_button'), mentoring_path, class: 'btn-enhanced btn-l'
