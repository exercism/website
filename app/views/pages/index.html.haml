<script src="https://unpkg.com/rough-notation@0.5.1/lib/rough-notation.iife.js"></script>

:javascript
  const annotationH1 = RoughNotation.annotate(
    document.querySelector('#page-landing h1 strong'),
    {
      type: 'underline',
      color:'#6A93FF',
      strokeWidth:6,
      iterations: 1,
      padding: -7,
      multiline: true
    });

  const annotationP = RoughNotation.annotate(
    document.querySelector('#page-landing p strong'),
    {
      type: 'highlight',
      color:'#FFF176',
      iterations: 1,
      multiline: true
    });
  setTimeout(function() { annotationH1.show() }, 1000)
  setTimeout(function() { annotationP.show() }, 2000)
