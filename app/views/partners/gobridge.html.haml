- require_stylesheet "about"

#gobridge-partner-page
  %header.pt-32.md:pt-48.pb-48.md:pb-64
    .lg-container.flex.flex-col.md:items-center.c-shapes.c-shapes-1
      .icons.flex.items-center.mb-24.md:mb-36.self-center
        = graphical_icon "exercism-face"
        %span ðŸ’™
        = graphical_icon "go-gopher", category: "graphics"

      %h1.text-h0.text-center.mb-12.md:mb-16= t('.header.title')
      %p.text-p-2xlarge.mb-32.md:mb-48= t('.header.subtitle')
      .btns.flex.flex-col.md:flex-row.md:items-center
        = link_to t('.header.mentor_button'), mentoring_path, class: 'btn-primary btn-m mb-16 md:mb-0 md:mr-16'
        = link_to t('.header.learn_button'), track_path('go'), class: 'btn-secondary btn-m md:ml-16'
        -# = link_to "Contribute to the Track", contributing_tasks_path(track_slug: "go"), class: 'btn-secondary btn-m'

  %article
    %section.mentoring-section.pt-40.md:pt-56.mb-16.md:mb-48
      .lg-container.flex.flex-col-reverse.lg:flex-row.mb-48
        .content.flex.flex-col
          %h2.text-h4.mb-16.flex.items-center
            = graphical_icon "mentoring-gradient"
            .text-gradient.ml-24= t('.mentoring_section.heading')
          %h3.text-h1
            %span.sm= t('.mentoring_section.subheading_sm')
            %span.md= t('.mentoring_section.subheading_md')
          %hr.c-divider.my-24
          %p.text-p-xlarge.mb-16= t('.mentoring_section.paragraph_1')
          %p.text-p-xlarge.mb-16= t('.mentoring_section.paragraph_2')
          %p.text-p-xlarge.mb-32
            %strong= t('.mentoring_section.paragraph_3_html').html_safe
          = link_to mentoring_path, class: 'btn-primary btn-m self-start' do
            = t('.mentoring_section.button')
            = graphical_icon "arrow-right"

        %section.video-section.flex-shrink-0.mb-32.lg:mb-0
          <div class="video rounded-5 overflow-hidden" style="padding:56.25% 0 0 0;position:relative;"><iframe src="https://player.vimeo.com/video/621624759?badge=0&amp;autopause=0&amp;player_id=0&amp;app_id=58479&amp;h=3d84913229" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen style="position:absolute;top:0;left:0;width:100%;height:100%;" title="Become an Exercism mentor"></iframe></div><script src="https://player.vimeo.com/api/player.js"></script>

      = image_tag "screenshots/mentoring-1376w.webp", class: "screenshots"

    %section.learning-section.c-shapes.c-shapes-1.pt-48.mb-96
      .lg-container.flex.flex-col.items-center
        %h2.text-h4.mb-16.flex.items-center
          = graphical_icon "concepts"
          .text-gradient.ml-24= t('.learning_section.heading')

        %h3.text-h1= t('.learning_section.subheading')

        %hr.c-divider.my-24
        %p.text-p-xlarge.mb-16.text-center
          = t('.learning_section.paragraph_1_html', num_concepts: @num_concepts, num_exercises: @num_exercises).html_safe

        %p.text-p-xlarge.mb-32.text-center
          %strong= t('.learning_section.paragraph_2_html').html_safe

        = link_to track_path('go'), class: 'btn-primary btn-m mb-48' do
          = t('.learning_section.button')
          = graphical_icon "arrow-right"

        = link_to track_concepts_path('go'), class: "concepts-map" do
          = image_tag "screenshots/go-concepts.jpg"

    %section.contributing-section
      .lg-container.flex.flex-col.items-center
        %h2.text-h4.mb-16.flex.items-center
          = graphical_icon "concepts"
          .text-gradient.ml-24= t('.contributing_section.heading')

        %h3.text-h1.text-center= t('.contributing_section.subheading')

        %hr.c-divider.my-24

        .grid.grid-cols-1.md:grid-cols-3.gap-32
          = link_to mentoring_path, class: 'box e-hover-grow' do
            = graphical_icon "mentoring", category: 'graphics'
            .tag= t('.contributing_section.mentor_box.tag')
            .text-h3= t('.contributing_section.mentor_box.title')
            = graphical_icon "arrow-right"

          = link_to contributing_tasks_path(track_slug: "go"), class: 'box e-hover-grow' do
            = graphical_icon "tasks", category: 'graphics'
            .tag= t('.contributing_section.build_box.tag')
            .text-h3= t('.contributing_section.build_box.title', num_tasks: @num_tasks)
            = graphical_icon "arrow-right"

          = link_to donate_path, class: 'box e-hover-grow' do
            = graphical_icon "floating-cash", category: 'graphics'
            .tag= t('.contributing_section.donate_box.tag')
            .text-h3= t('.contributing_section.donate_box.title')
            = graphical_icon "arrow-right"
