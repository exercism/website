#page-settings-preferences.page-settings
  .lg-container
    = render ViewComponents::SettingsNav.new(:preferences)

    %article
      %h1= t('.general_preferences.heading')

      %section{ id: 'theme-preferences-form' }
        = render ReactComponents::Settings::ThemePreferenceForm.new

      %section{ id: 'comments-preference-form' }
        = render ReactComponents::Settings::CommentsPreferenceForm.new

      %section{ id: 'user-preferences-form' }
        = render ReactComponents::Settings::UserPreferencesForm.new
