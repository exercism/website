.track-team-group
  .track-header.mb-16
    .flex.md:flex-row.flex-col.md:items-center.items-left.justify-between.mb-8.md:gap-0.gap-y-8
      %h3.--test-runner-gradient= t('.test_runner_heading')
      = link_to doc_path(:building, "tooling/test-runners"), class: "learn-more-new-tab" do
        = t('.learn_more_button')
    %p= t('.test_runner_description')

  - if status.test_runner.health == "missing"
    .action-required
      = t('.next_goal_build_test_runner')
      = link_to doc_path(:building, "tooling/test-runners/interface") do
        = t('.find_out_more_button')
  - else
    %p.text-16
      = t('.current_version_label')
      %strong= current_sha
      %span.italic= t('.deploy_time_notice')
    - if status.test_runner.version_target
      .action-required.mt-16
        = t('.next_goal_get_test_runners', version_target: status.test_runner.version_target, track_title: track.title, version: status.test_runner.version)
        = link_to doc_path(:building, "tooling/test-runners/interface") do
          = t('.find_out_more_button')

  - unless status.test_runner.health == "missing"
    .border-t-1.border-borderColor6.mt-20.mb-16
    .c-build-page-stats-container
      .record-row
        .record-name= t('.total_test_runner_runs_label')
        .record-value= number_with_delimiter(status.test_runner.num_runs)
      .record-row
        .record-name= t('.test_run_pass_rate_label')
        .record-value= t('.percentage_with_count_value', percentage: status.test_runner.num_passed_percentage, count: status.test_runner.num_passed)
      .record-row
        .record-name= t('.test_run_fail_rate_label')
        .record-value= t('.percentage_with_count_value', percentage: status.test_runner.num_failed_percentage, count: status.test_runner.num_failed)
      .record-row
        .record-name= t('.test_run_error_rate_label')
        .record-value= t('.percentage_with_count_value', percentage: status.test_runner.num_errored_percentage, count: status.test_runner.num_errored)

  = render ReactComponents::Common::Credits.new(status.test_runner.volunteers.users, status.test_runner.volunteers.num_users, 'contributor', 0, '', css_class: 'font-semibold')
