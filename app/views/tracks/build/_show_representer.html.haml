.track-team-group
  .track-header.mb-16
    .flex.md:flex-row.flex-col.md:items-center.items-left.justify-between.mb-8.md:gap-0.gap-y-8
      %h3.--representer-gradient= t('.representer_heading')
      = link_to doc_path(:building, "tooling/representers"), class: "learn-more-new-tab" do
        = t('.learn_more_button')
    %p= t('.representer_description')

  - if status.representer.health == "missing"
    .action-required
      = t('.next_goal_build_representer')
      = link_to doc_path(:building, "tooling/representers/interface") do
        = t('.find_out_more_button')
  - else
    %p.text-16
      = t('.current_version_label')
      %strong= current_sha
      %span.italic= t('.deploy_time_notice_short')

    .border-t-1.border-borderColor6.mt-20.mb-16
    .c-build-page-stats-container
      .record-row
        .record-name= t('.total_representer_runs_label')
        .record-value= number_with_delimiter(status.representer.num_runs)
      .record-row
        .record-name= t('.total_representation_comments_made_label')
        .record-value= number_with_delimiter(status.representer.num_comments)
      .record-row
        .record-name= t('.feedback_given_frequency_label')
        .record-value #{status.representer.display_rate_percentage}%
