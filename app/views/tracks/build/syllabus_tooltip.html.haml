.c-tooltip-base.sm:block.hidden
  .flex.gap-16
    = graphical_icon 'syllabus', css_class: "filter-textColor6"
    %div
      %h5.text-h5
        = t('.syllabus_heading', track_title: @track.title)
        = render ViewComponents::Track::Build::Health.new(@status.syllabus.health)

      %p.text-p-base
        - case @status.syllabus.health.to_sym
        - when :exemplar
          = t('.syllabus_exemplar', count: @status.syllabus.concepts.active.size)
        - when :healthy
          = t('.syllabus_healthy', count: @status.syllabus.concepts.active.size)
        - when :needs_attention
          - num_concepts_to_target = @status.syllabus.concepts.num_active_target - @status.syllabus.concepts.active.size
          = t('.syllabus_needs_attention', count: num_concepts_to_target)
        - when :missing
          = t('.syllabus_missing')
