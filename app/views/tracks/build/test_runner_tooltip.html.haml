.c-tooltip-base.sm:block.hidden
  .flex.gap-16
    = graphical_icon 'test-runner', css_class: "filter-textColor6"
    %div
      %h5.text-h5
        = t('.test_runner_heading', track_title: @track.title)
        = render ViewComponents::Track::Build::Health.new(@status.test_runner.health)

      %p.text-p-base
        - case @status.test_runner.health.to_sym
        - when :exemplar
          = t('.health_status.exemplar')
        - when :healthy
          = t('.health_status.healthy', current_version: @status.test_runner.version, target_version: @status.test_runner.version_target)
        - when :needs_attention
          = t('.health_status.needs_attention', current_version: @status.test_runner.version, target_version: @status.test_runner.version_target)
        - when :missing
          = t('.health_status.missing')

      - if @status.test_runner.num_runs.positive?
        %p.text-p-base
          = t('.iterations_tested', count: @status.test_runner.num_runs)
