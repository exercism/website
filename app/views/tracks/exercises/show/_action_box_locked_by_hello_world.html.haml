.action-box.pending
  .action-box-content
    %h3= t('.unlock_title', exercise_title: exercise.title)
    %p.mb-20
      = t('.unlock_description_html', track_title: track.title).html_safe

    - if track.tutorial_exercise
      = render ReactComponents::Common::ExerciseWidget.new(track.tutorial_exercise, user_track)

= render "tracks/exercises/show/action_box_solve_locked"
= render("tracks/exercises/show/action_box_dig_deeper_locked", exercise:)
= render "tracks/exercises/show/action_box_complete_locked"
= render "tracks/exercises/show/action_box_publish_locked"
