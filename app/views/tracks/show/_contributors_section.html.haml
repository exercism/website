%section.contributors-section
  %h2.text-h4
    = graphical_icon(:contributors)
    = t('.contributors_heading', track_title: track.title)

  %ol.showcase{ "aria-label": t('.top_contributors_aria_label') }
    - contributors[0..1].to_a.each do |contributor|
      %li
        = link_to profile_path(contributor), "aria-label": t('.view_profile_aria_label', handle: contributor.handle), "data-tooltip-type": "user", "data-endpoint": tooltip_profile_path(contributor.handle), "data-handle": contributor.handle, "data-placement": "left" do
          = avatar(contributor)
          .name= render ViewComponents::HandleWithFlair.new(contributor.name, contributor.flair, size: :base)
          = render ViewComponents::Reputation.new(contributor.formatted_reputation)

  %ol.faces{ "aria-label": t('.other_significant_contributors_aria_label') }
    - contributors[2..13].to_a.each do |contributor|
      %li
        = avatar_link(contributor, "data-tooltip-type": "user", "data-endpoint": tooltip_profile_path(contributor.handle), "data-handle": contributor.handle, "data-placement": "left")

    %li= link_to t('.see_all_contributors_link'), contributing_contributors_path(track_slug: track.slug), class: "all", "aria-label": t('.see_all_contributors_aria_label') # TODO

  .cta
    %h3
      = t('.cta_heading_html').html_safe
    %p= t('.cta_text')
    = link_to t('.contribute_to_track_link', track_title: track.title), contributing_tasks_path(track_slug: track.slug)
