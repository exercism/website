#page-onboarding
  .faux-site-header
    .md-container
      = graphical_icon "exercism-with-logo-black"

  .md-container
    = form_with model: @onboarding, url: user_onboarding_path, data: { turbo: false } do |f|
      %ul
        - @onboarding.errors.full_messages.each do |message|
          %li= message

      %header
        .content
          %h1= t('.header.title')
          %p
            = t('.header.subtitle_html').html_safe

        = graphical_icon "laptop-woman-1", category: 'graphics'

      %section.terms
        %h2= t('.terms_section.title')
        .box
          %p= t('.terms_section.summary')
          %ul
            %li
              = t('.terms_section.code_of_conduct_html', code_of_conduct_link: external_link_to('Code of conduct', code_of_conduct_path)).html_safe
            %li
              = t('.terms_section.property_license')
            %li
              = t('.terms_section.licences_html', mit_license_link: external_link_to('MIT', mit_licence_path), cc_sa_4_license_link: external_link_to('CC-BY-SA-4.0', cc_sa_4_licence_path)).html_safe

          %p= t('.terms_section.full_terms_html', terms_of_service_link: external_link_to('Terms of Service', terms_of_service_path)).html_safe

          %label.c-checkbox-wrapper
            = f.check_box :terms_of_service, required: true
            .row
              .c-checkbox
                = graphical_icon :checkmark
              %span= t('.terms_section.accept_terms')

      %section.terms
        %h2= t('.privacy_policy_section.title')
        .box
          %p
            = t('.privacy_policy_section.summary_html', privacy_policy_link: external_link_to('read it in full here', privacy_policy_path)).html_safe

          %label.c-checkbox-wrapper
            = f.check_box :privacy_policy, required: true
            .row
              .c-checkbox
                = graphical_icon :checkmark
              %span= t('.privacy_policy_section.accept_privacy_policy')

      = f.button t('.save_button'), class: "btn-primary btn-m"
