set ball to new Ball()

repeat 376 times do
  if ball.cx - 3 <= 0 do
    change ball.x_velocity to 1
  end
  if ball.cx + 3 >= 100 do
    change ball.x_velocity to -1
  end
  if ball.cy - 3 <= 0 do
    change ball.y_velocity to 1
  end
  if ball.cy + 3 >= 100 do
    change ball.y_velocity to -1
  end
  move_ball(ball)
end
