{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom", "es2018.promise", "es2017"],
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["app/javascript/declarations"]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
